<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:actionBarStyle">@style/PokedexAppBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="PokedexAppBar" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>


    <style name="PokemonTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/PokemonTabTextAppearance</item>
    </style>

    <style name="PokemonTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#a8a19e</item>
    </style>
</resources>
